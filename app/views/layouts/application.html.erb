<!DOCTYPE html>
<html>
  <head>
    <title>Название магазина</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <!-- Navigation -->
  <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <%= link_to 'Главная', root_path, {:class => 'navbar-brand', data: { turbolinks: false }} %>
      </div>
      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <li>
            <%= link_to 'О магазине', shop_about_path %>
          </li>
          <li>
            <%= link_to 'Доставка и график работы', shop_delivery_path %>
          </li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <% if session[:current_user] %>
            <li><%= link_to 'Редактирование товаров', admin_index_path, data: { turbolinks: false } %></li>
            <li><%= link_to 'Выйти', session_path('logout'), method: :delete %></li>
          <% end %>
        </ul>
      </div>
      <!-- /.navbar-collapse -->
    </div>
    <!-- /.container -->
  </nav>

  <div class="container">
    <%= yield %>
    <hr>

    <!-- Footer -->
    <footer>
      <div class="row">
        <div class="col-lg-12">
          <p>Copyright &copy; <a href="https://github.com/Equitis90" >Equitis</a></p>
        </div>
      </div>
    </footer>
  </div>
  </body>
</html>

