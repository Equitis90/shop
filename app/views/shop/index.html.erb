<!-- Page Content -->
<div class="container" id="main_container">

  <div class="row">

    <div class="col-md-3">
      <p class="lead">Название магазина</p>
      <div class="list-group">
        <a href="#" class="list-group-item">Мужские</a>
        <a href="#" class="list-group-item">Женские</a>
      </div>
    </div>

    <div class="col-md-9">
      <div class="row">
        <% @items.each do |item| %>
          <div class="col-sm-4 col-lg-4 col-md-4">
            <div class="thumbnail">
              <img src=<%= item.image %> alt="" height='150' width='320'>
              <div class="caption">
                <h4 class="pull-right"><%= item.price %></h4>
                <h4><%= item.title %></a>
                </h4>
                <p><%= item.description %></p>
                <p><%= item.gender == 'women' ? 'Женские' : 'Мужские' %></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
<!-- /.container -->

<div class="container">

  <hr>

  <!-- Footer -->
  <footer>
    <div class="row">
      <div class="col-lg-12">
        <p>Copyright &copy; Equitis 2017</p>
      </div>
    </div>
  </footer>

</div>
<!-- /.container -->
